@using _4Bike.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity

@*@model IEnumerable<_4Bike.Areas.Identity.Data.ApplicationUser>*@
@model IEnumerable<_4Bike.Models.ViewModels.UserViewModel>
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-12 col-md-8 col-lg-10">
        <h1>Manage users</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.User.Id</td>
                    <td>@item.User.Email</td>
                    <td>@item.User.FirstName</td>
                    <td>@item.User.LastName</td>
                    <td>@item.User.Address</td>
                    <td><a asp-controller="Role" asp-action="EditUser" asp-route-id="@item.User.Id">Edit</a></td>
                    <td>
                        <button class="DeleteButton"
                                style="border: none; background-color: transparent;color:red"
                                data-hasOrderFlag="@item.HasOrder" data-userId="@item.User.Id">
                            Delete
                        </button>
                        <!--<span class="hasOrderFlag" style="display:none;">@item.HasOrder</span>-->
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-12 col-md-4 col-lg-2">
        <partial name="/Views/Shared/SidebarPartial.cshtml" model="UserManager.GetUserName(User)" />
    </div>

</div>

@section Scripts
{
    <script src="~/js/DeleteUser.js"></script>
}
