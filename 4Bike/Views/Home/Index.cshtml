    @using (Html.BeginForm("AddOrder", "Home", FormMethod.Post))
    {
        <input type="datetime" name="OrderDate">
        <input type="number" name="OrderHandelCost" placeholder="bike">
        <input type="submit" value="giveLanguage">
    }

</div>
