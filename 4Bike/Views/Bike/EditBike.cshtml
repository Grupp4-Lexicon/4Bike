@using _4Bike.Models.Products;
@using  _4Bike.Models.ViewModels;
@model _4Bike.Models.Products.Product_Bike
@{
    ViewData["Title"] = "AddBikes";
}



<h1>Edit Bikes</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBike">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BikeID" />
            <div class="form-group">
                <label asp-for="BikeName" class="control-label"></label>
                <input asp-for="BikeName" class="form-control" />
                <span asp-validation-for="BikeName" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="BikePrice" class="control-label"></label>
                <input asp-for="BikePrice" class="form-control" required />
                <span asp-validation-for="BikePrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BikePicNav" class="control-label"></label>
                <input asp-for="BikePicNav" class="form-control" required />
            </div>




            <div class="form-group">
                <label asp-for="ManufacturerID" class="control-label"></label>
                <select asp-for="ManufacturerID" id="chosenManufacturer" required>
                    <option value="">none</option>
                    @foreach (ManufacturerViewModel p in ViewBag.Manufactures)
                    {
                        if (Model.Manufacturer.ManufacturerID == p.ManufacturerID)
                        {
                            <option value="@p.ManufacturerID" selected>@p.ManufacturerID</option>
                        }
                        else
                        {
                            <option value="@p.ManufacturerID">@p.ManufacturerID</option>
                        }

                    }

                </select>
            </div>




            <input type="submit" value="Save Changes" class="btn btn-primary" />

        </form>

    </div>
</div>