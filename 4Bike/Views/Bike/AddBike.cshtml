@using _4Bike.Models.Products
@using _4Bike.Models.ViewModels
@using _4Bike.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity

@model AddBikesViewModel

@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "AddBikes";
}


<div class="row">
    <div class="col-12 col-md-8 col-lg-10">
        <h5>Add Bikes</h5>
        <div>
            <form asp-action="AddBike" enctype="multipart/form-data" method="post">
                <div class="form-group">
                    <label asp-for="BikeName" class="control-label"></label>
                    <input asp-for="BikeName" class="form-control" required />
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" required />
                </div>

                <div class="form-group">
                    <span>Select File:</span>
                    <input asp-for="PicFile" type="file" />
                </div>

                <div class="form-group">
                    <label asp-for="ManufacturerName" class="control-label"></label>
                    <select id="chosenManufacturer" asp-for="ManufacturerID" required>
                        <option value="">none</option>
                        @foreach (Product_Manufacturer p in ViewBag.Manufacturers)
                        {
                            <option value="@p.ManufacturerID">@p.ManufacturerName</option>
                        }

                    </select>
                </div>

                @*<div class="form-group">
                    <label asp-for="ManufacturerName" class="control-label"></label>
                    <select id="chosenManufacturer" asp-for="ManufacturerName" required>
                        <option value="">none</option>
                        @foreach (Product_Manufacturer p in ViewBag.Manufacturers)
                        {
                            <option value="@p.ManufacturerName">@p.ManufacturerName</option>
                        }

                    </select>
                </div>*@

                <input type="submit" value="Create" class="btn btn-primary" />

            </form>


        </div>

    </div>
    
    <div class="col-12 col-md-4 col-lg-2">
        <partial name="/Views/Shared/SidebarPartial.cshtml" model="UserManager.GetUserName(User)" />
    </div>
    
</div>
