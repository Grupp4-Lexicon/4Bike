@using _4Bike.Models.Products
@using  _4Bike.Models.ViewModels
@model AddBikesViewModel
@{
    ViewData["Title"] = "AddBikes";
}



<h1>Add Bikes</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBike" method="post">
            <div class="form-group">
                <label asp-for="BikeName" class="control-label"></label>
                <input asp-for="BikeName" class="form-control" required />
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" required />
            </div>

            <div class="form-group">
                <label asp-for="Pic" class="control-label"></label>
                <input asp-for="Pic" class="form-control" required />
            </div>




            <div class="form-group">
                <label asp-for="ManufacturerID" class="control-label"></label>
                <select id="chosenManufacturer" asp-for="ManufacturerID" required>
                    <option value="">none</option>
                    @foreach (Product_Manufacturer p in ViewBag.Manufacturers)
                    {
                        <option value="@p.ManufacturerID">@p.ManufacturerID</option>
                    }

                </select>
            </div>

            @*<div class="form-group">
                <label asp-for="ManufacturerName" class="control-label"></label>
                <select id="chosenManufacturer" asp-for="ManufacturerName" required>
                    <option value="">none</option>
                    @foreach (Product_Manufacturer p in ViewBag.Manufacturers)
                    {
                        <option value="@p.ManufacturerName">@p.ManufacturerName</option>
                    }

                </select>
            </div>*@


            <input type="submit" value="Create" class="btn btn-primary" />

        </form>

    </div>
</div>