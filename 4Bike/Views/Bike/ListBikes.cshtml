@model IEnumerable<_4Bike.Models.Products.Product_Bike>
@{
    ViewData["Title"] = "List of Bike";
}


<h5>The list of Bikes in the Database</h5>

<p>
    <a asp-action="AddBike">Add Bike</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
            <th>ManufacturerID</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.BikeID</td>
            <td>@item.BikeName</td>
            <td>@item.BikePrice</td>
            <td>@item.BikePicNav</td>
            <td>@item.ManufacturerID</td>
            @*<td>@item.ManufacturerName</td>*@


            <td><a asp-action="DeleteBike" asp-route-id=@item.BikeID>Delete</a></td>
            <td><a asp-action="EditBike" asp-route-id=@item.BikeID>Edit</a></td>
        </tr>
        }

    </tbody>
</table>