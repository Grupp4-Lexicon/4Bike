@model _4Bike.Models.ViewModels.ManufacturerViewModel
@{
    ViewData["Title"] = "AddManufacturer";
}

<h5>Add Manufacturer</h5>

<div class="row">

    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddManufacturer" method="post">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value=" Add" class=" btn btn-primary" />
                </div>
            </form>


        </div>

    </div>

</div>